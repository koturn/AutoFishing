<Window x:Class="AutoFishing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:nud="clr-namespace:NumericUpDownLib;assembly=NumericUpDownLib"
        xmlns:local="clr-namespace:AutoFishing"
        mc:Ignorable="d"
        Title="Auto Fishing" Width="Auto" Height="Auto"
        SizeToContent="WidthAndHeight">
    <Grid Margin="6,6,6,6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Content="Charge time:" Grid.Row="0" Grid.Column="0" Margin="0,3,3,0" VerticalAlignment="Center"/>
        <nud:UIntegerUpDown Value="500" MinValue="100" MaxValue="3000" IsReadOnly="False" IsMouseDragEnabled="False" IsUpdateValueWhenLostFocus="True" Grid.Row="0" Grid.Column="1" Margin="0,3,3,0" ValueChanged="NudChargeTime_ValueChanged"/>
        <Label Content="ms" Grid.Row="0" Grid.Column="2" Margin="0,3,3,0" VerticalAlignment="Center"/>

        <Label Content="Wait timeout:" Grid.Row="1" Grid.Column="0" Margin="0,3,3,0" VerticalAlignment="Center"/>
        <nud:UIntegerUpDown Value="90000" MinValue="10000" MaxValue="300000" IsReadOnly="False" IsMouseDragEnabled="False" IsUpdateValueWhenLostFocus="True" Grid.Row="1" Grid.Column="1" Margin="0,3,3,0" ValueChanged="NudWaitTimeout_ValueChanged"/>
        <Label Content="ms" Grid.Row="1" Grid.Column="2" Margin="0,3,3,0" VerticalAlignment="Center"/>

        <Label Content="Roll timeout:" Grid.Row="2" Grid.Column="0" Margin="0,3,3,0" VerticalAlignment="Center"/>
        <nud:UIntegerUpDown Value="20000" MinValue="10000" MaxValue="30000" IsReadOnly="False" IsMouseDragEnabled="False" IsUpdateValueWhenLostFocus="True" Grid.Row="2" Grid.Column="1" Margin="0,3,3,0" ValueChanged="NudRollTimeout_ValueChanged"/>
        <Label Content="ms" Grid.Row="2" Grid.Column="2" Margin="0,3,3,0" VerticalAlignment="Center"/>

        <Button Content="Start" Grid.Row="3" Grid.Column="0" Click="ButtonToggle_Click"/>
        <Label x:Name="_labelStatus" Content="Stop" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Center"/>
    </Grid>
</Window>
